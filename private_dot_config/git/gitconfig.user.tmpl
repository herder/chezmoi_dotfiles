[user]
  name = Niklas Herder
  email = {{ .email }}
  useConfigOnly = true
  signingkey = {{ onepasswordRead "op://Private/Privat SSH/public key" }}
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/opt/1Password/op-ssh-sign"
[commit]
  gpgsign = true
[fetch]
  prune = true
[init]
  defaultBranch = main
[pull]
  rebase = true
[rebase]
  autoStash = true
[core]
  filemode = true
[include]
  path = ~/.gitconfig.work 
  path = ~/.gitconfig.diff

